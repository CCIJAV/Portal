---
import Layout from "../layouts/Layout.astro";

const url = Astro.request.url.replace("http://localhost:4321/","/");
---
<Layout>
    <div class="mt-60 w-full text-center text-white font-bebas text-9xl">
        <div class="w-full align-middle">
            <h1>
                <span class="text-secondary">Error 404:</span>
                <span class="text-info">Not found</span>
            </h1>
            <p class="text-2xl">Path: {url}</p>
        </div>
    </div>
</Layout>
